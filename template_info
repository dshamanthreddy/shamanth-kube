apiVersion: apps/v1beta2 # for versions before 1.8.0 use apps/v1beta1
kind: Deployment #service,pod,replication controller 
metadata:
  name: sise # name of that
  namespace: any_namespace_created
  labels:
    key: value
spec:
  replicas: 2   #no of to scale
  selector:
    matchLabels:
      app: sise
  template:
    metadata:
      labels:
        app: sise   #label to that pod
    spec:
      containers:                                     #Container info
      - name: sise                                    #name of the container 
        image: mhausenblas/simpleservice:0.5.0        #image
        ports:
        - containerPort: 9876                         #container running on thar port
        env:
        - name: SIMPLE_SERVICE_VERSION
          value: "0.9"
        resources:
          requests:
            cpu: 4
            memory: "256M"
          limits:
            cpu: 4
            memory: "256M"      
